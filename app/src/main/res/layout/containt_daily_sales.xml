<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_47sdp"
        >

        <ImageView
            android:id="@+id/frag_daily_sales_imgBack"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_13sdp"
            android:src="@drawable/ic_back_icon"
            android:layout_alignParentStart="true"
            />

        <ImageView
            android:id="@+id/frag_daily_sales_imgMenu"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:src="@drawable/ic_there_dots"
            android:layout_toStartOf="@+id/frag_daily_sales_imgFilter"
            />

        <ImageView
            android:id="@+id/frag_daily_sales_imgFilter"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="match_parent"
            android:padding="@dimen/_10sdp"
            android:src="@mipmap/img_menu_icon_png"
            android:layout_alignParentEnd="true"
            />

        <RelativeLayout
            android:id="@+id/frag_daily_sales_layoutDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/frag_daily_sales_txtHeaderName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold_font"
                android:textAlignment="center"
                android:text="@string/daily_sales"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:id="@+id/frag_daily_sales_txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_regular"
                android:textAlignment="center"
                android:text="1 Jul, 2020"
                android:textColor="@color/colorBlack"
                android:textSize="@dimen/font_size_small"
                android:layout_below="@+id/frag_daily_sales_txtHeaderName"
                />


            <ImageView
                android:layout_width="@dimen/_12sdp"
                android:layout_height="@dimen/_20sdp"
                android:src="@drawable/ic_down_arrow"
                android:layout_toEndOf="@id/frag_daily_sales_txtDate"
                android:layout_below="@+id/frag_daily_sales_txtHeaderName"
                android:layout_marginStart="@dimen/_5sdp"
                />
        </RelativeLayout>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider"/>
</LinearLayout>