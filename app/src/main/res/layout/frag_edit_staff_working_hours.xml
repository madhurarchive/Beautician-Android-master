<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragEditStaffWorkingHours"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >
    <include layout="@layout/toolbar2"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorDivider"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/_5sdp"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/frag_edit_staff_working_txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_medium"
                android:textColor="@color/colorBlack"
                android:textAlignment="center"
                android:text="Edit Wendy House"
                android:layout_marginTop="@dimen/_10sdp"
                />

            <TextView
                android:layout_below="@+id/frag_edit_staff_working_txtName"
                android:id="@+id/frag_edit_staff_working_txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_small"
                android:textColor="@color/colorSecondaryText"
                android:textAlignment="center"
                android:text="Saturday, 13 June 2020"
                />


            <ImageView
                android:id="@+id/frag_edit_staff_working_imgClose"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_close"
                android:padding="@dimen/_7sdp"
                android:layout_margin="@dimen/_5sdp"
                android:layout_alignParentEnd="true"
                />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_20sdp"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="viewStart"
                    android:text="@string/shift_start"
                    android:textAllCaps="true"
                    />

                <LinearLayout
                    android:id="@+id/frag_edit_staff_working_layoutShiftStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_inventory_product_edit_bg"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/frag_edit_staff_working_txtShiftStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textColor="@color/colorBlack"
                        android:text="9:00am"
                        android:padding="@dimen/inventory_new_product_edit_padding"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/right_arrow_size"
                        android:layout_height="@dimen/right_arrow_size"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_marginEnd="@dimen/_10sdp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="viewStart"
                    android:text="@string/shift_end"
                    android:textAllCaps="true"
                    />

                <LinearLayout
                    android:id="@+id/frag_edit_staff_working_layoutShiftEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_inventory_product_edit_bg"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/frag_edit_staff_working_txtShiftEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textColor="@color/colorBlack"
                        android:text="5:00pm"
                        android:padding="@dimen/inventory_new_product_edit_padding"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/right_arrow_size"
                        android:layout_height="@dimen/right_arrow_size"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_marginEnd="@dimen/_10sdp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/frag_edit_staff_working_layoutAddShift"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_inventory_product_edit_bg"
            android:gravity="center"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/font_size_regular"
                android:textColor="@color/colorBlack"
                android:text="@string/add_another_shift"
                android:padding="@dimen/inventory_new_product_edit_padding"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/frag_edit_staff_working_layoutAnotherShift"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="viewStart"
                    android:text="@string/shift_start"
                    android:textAllCaps="true"
                    />

                <LinearLayout
                    android:id="@+id/frag_edit_staff_working_layoutAnotherShiftStart"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_inventory_product_edit_bg"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/frag_edit_staff_working_txtAnotherShiftStartTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textColor="@color/colorBlack"
                        android:text="9:00am"
                        android:padding="@dimen/inventory_new_product_edit_padding"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/right_arrow_size"
                        android:layout_height="@dimen/right_arrow_size"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_marginEnd="@dimen/_10sdp"
                        />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="viewStart"
                    android:text="@string/shift_end"
                    android:textAllCaps="true"
                    />

                <LinearLayout
                    android:id="@+id/frag_edit_staff_working_layoutAnotherShiftEnd"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_inventory_product_edit_bg"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/frag_edit_staff_working_txtAnotherShiftEndTime"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textColor="@color/colorBlack"
                        android:text="5:00pm"
                        android:padding="@dimen/inventory_new_product_edit_padding"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/frag_edit_staff_working_imgCloseAnotherShift"
                        android:layout_width="@dimen/_22sdp"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_close"
                        android:padding="@dimen/_6sdp"
                        android:layout_marginEnd="@dimen/_3sdp"
                        />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="viewStart"
                    android:text="@string/repeats"
                    android:textAllCaps="true"
                    />

                <LinearLayout
                    android:id="@+id/frag_edit_staff_working_layoutRepeats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_inventory_product_edit_bg"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/frag_edit_staff_working_txtRepeats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textColor="@color/colorBlack"
                        android:text="@string/don_t_repeat"
                        android:padding="@dimen/inventory_new_product_edit_padding"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:layout_width="@dimen/right_arrow_size"
                        android:layout_height="@dimen/right_arrow_size"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_marginEnd="@dimen/_10sdp"
                        />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/frag_edit_staff_working_layoutRootEndRepeats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_weight="1"
                android:visibility="gone"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_small"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="viewStart"
                    android:text="@string/end_repeat"
                    android:textAllCaps="true"
                    />

                <LinearLayout
                    android:id="@+id/frag_edit_staff_working_layoutEndRepeats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/ic_inventory_product_edit_bg"
                    android:gravity="center"
                    >
                    <TextView
                        android:id="@+id/frag_edit_staff_working_txtEndRepeats"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textColor="@color/colorBlack"
                        android:text="@string/ongoing"
                        android:padding="@dimen/inventory_new_product_edit_padding"
                        android:layout_weight="1"
                        />
                    <ImageView
                        android:id="@+id/frag_edit_staff_working_imgEndRepeats"
                        android:layout_width="@dimen/right_arrow_size"
                        android:layout_height="match_parent"
                        android:src="@drawable/ic_down_arrow"
                        android:layout_marginEnd="@dimen/_10sdp"
                        />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:id="@+id/frag_edit_staff_working_txtSave"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/colorWhite"
            android:background="@drawable/ic_save_btn_bg"
            android:text="@string/save"
            android:textAllCaps="false"
            android:padding="@dimen/button_padding"
            android:layout_marginTop="@dimen/_20sdp"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/colorSecondaryText"
            android:background="@drawable/ic_inventory_product_edit_bg"
            android:text="@string/close"
            android:textAllCaps="false"
            android:padding="@dimen/button_padding"
            android:layout_marginTop="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/frag_edit_staff_working_txtDelete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="@dimen/font_size_medium"
            android:textColor="@color/colorWhite"
            android:background="@drawable/ic_rad_btn_bg"
            android:text="@string/delete"
            android:textAllCaps="false"
            android:padding="@dimen/button_padding"
            android:layout_marginTop="@dimen/_10sdp"
            />

    </LinearLayout>
</LinearLayout>