<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.FragClientProfile"
    android:background="@color/colorWhite"
    android:orientation="vertical"
    >

    <include layout="@layout/toolbar2"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorBlack"
        />

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ic_grey_circle"
                    android:layout_gravity="center"
                    android:padding="@dimen/_3sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    >
                    <TextView
                        android:id="@+id/frag_client_profile_txtNameFirstWord"
                        android:layout_width="@dimen/_90sdp"
                        android:layout_height="@dimen/_90sdp"
                        android:textSize="@dimen/_30ssp"
                        android:textAllCaps="true"
                        android:text="J"
                        android:fontFamily="@font/bold_font"
                        android:textColor="@color/colorPrimaryText"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        />

                    <ImageView
                        android:id="@+id/frag_client_profile_imgUser"
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_100sdp"
                        android:src="@mipmap/app_icon"
                        android:layout_centerInParent="true"
                        android:visibility="gone"
                        />

                </RelativeLayout>

                <TextView
                    android:id="@+id/frag_client_profile_txtUserName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_xx_large"
                    android:textAlignment="center"
                    android:text="Jana Doe"
                    android:fontFamily="@font/bold_font"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_marginTop="@dimen/_10sdp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/thin_text"
                    android:text="@string/new_client"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="true"
                    android:fontFamily="@font/regular_font"
                    android:background="@drawable/ic_rect_skybule_bg"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingStart="@dimen/_12sdp"
                    android:paddingEnd="@dimen/_12sdp"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorBlack"
                    android:layout_marginTop="@dimen/_20sdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_regular"
                    android:textAlignment="viewStart"
                    android:text="@string/email"
                    android:fontFamily="@font/regular_font"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_marginTop="@dimen/_20sdp"
                    />

                <TextView
                    android:id="@+id/frag_client_profile_txtEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_medium"
                    android:textAlignment="viewStart"
                    android:text="jana@example.com"
                    android:fontFamily="@font/regular_font"
                    android:textColor="@color/colorPrimaryText"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorBlack"
                    android:layout_marginTop="@dimen/_20sdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_regular"
                    android:textAlignment="viewStart"
                    android:text="@string/gender"
                    android:fontFamily="@font/regular_font"
                android:textColor="@color/colorPrimaryText"
                    android:layout_marginTop="@dimen/_20sdp"
                    />

                <TextView
                    android:id="@+id/frag_client_profile_txtGender"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_medium"
                    android:textAlignment="viewStart"
                    android:text="Female"
                    android:fontFamily="@font/regular_font"
                android:textColor="@color/colorPrimaryText"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorBlack"
                    android:layout_marginTop="@dimen/_20sdp"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_regular"
                    android:textAlignment="viewStart"
                    android:text="@string/marketing_notifications"
                    android:fontFamily="@font/regular_font"
                android:textColor="@color/colorPrimaryText"
                    android:layout_marginTop="@dimen/_20sdp"
                    />

                <TextView
                    android:id="@+id/frag_client_profile_txtNotification"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/font_size_medium"
                    android:textAlignment="viewStart"
                    android:text="@string/accepts_marketing_notifications"
                    android:fontFamily="@font/regular_font"
                android:textColor="@color/colorPrimaryText"
                    />


                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/colorBlack"
                    android:layout_marginTop="@dimen/_20sdp"
                    />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_40sdp"
                    >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_medium"
                            android:textAlignment="center"
                            android:text="\u20B9 0"
                            android:fontFamily="@font/bold_font"
                            android:textColor="@color/colorPrimaryText"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_regular"
                            android:textAlignment="center"
                            android:text="@string/total_sales"
                            android:fontFamily="@font/regular_font"
                android:textColor="@color/colorPrimaryText"
                            android:layout_marginTop="@dimen/_10sdp"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_10sdp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_medium"
                            android:textAlignment="center"
                            android:text="\u20B9 0"
                            android:fontFamily="@font/bold_font"
                            android:textColor="@color/colorPrimaryText"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_regular"
                            android:textAlignment="center"
                            android:text="@string/outstanding"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            android:layout_marginTop="@dimen/_10sdp"
                            />
                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_20sdp"
                    >
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_10sdp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:textAlignment="center"
                            android:text="2"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:textAlignment="center"
                            android:text="@string/all_bookings"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            android:layout_marginTop="@dimen/_10sdp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_10sdp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:textAlignment="center"
                            android:text="0"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:textAlignment="center"
                            android:text="@string/completed"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            android:layout_marginTop="@dimen/_10sdp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_10sdp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:textAlignment="center"
                            android:text="0"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:textAlignment="center"
                            android:text="@string/cancelled"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            android:layout_marginTop="@dimen/_10sdp"
                            />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_10sdp"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:textAlignment="center"
                            android:text="0"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/font_size_small"
                            android:textAlignment="center"
                            android:text="@string/no_shows"
                            android:fontFamily="@font/regular_font"
                            android:textColor="@color/colorPrimaryText"
                            android:layout_marginTop="@dimen/_10sdp"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_50sdp"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                >

                <LinearLayout
                    android:id="@+id/frag_clients_profile_layoutAppointments"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textAlignment="center"
                        android:text="@string/appointments"
                        android:textAllCaps="true"
                        android:fontFamily="@font/regular_font"
                android:textColor="@color/colorPrimaryText"
                        />

                    <View
                        android:id="@+id/frag_clients_profile_viewAppointments"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@drawable/ic_rect_black"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:visibility="visible"
                        />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/frag_clients_profile_layoutProducts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textAlignment="center"
                        android:text="@string/products"
                        android:textAllCaps="true"
                        android:fontFamily="@font/regular_font"
                android:textColor="@color/colorPrimaryText"
                        />

                    <View
                        android:id="@+id/frag_clients_profile_viewProducts"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@drawable/ic_rect_black"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:visibility="invisible"
                        />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/frag_clients_profile_layoutInvoices"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginStart="@dimen/_15sdp"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/font_size_regular"
                        android:textAlignment="center"
                        android:text="@string/invoices"
                        android:textAllCaps="true"
                        android:fontFamily="@font/regular_font"
                android:textColor="@color/colorPrimaryText"
                        />

                    <View
                        android:id="@+id/frag_clients_profile_viewInvoices"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_3sdp"
                        android:background="@drawable/ic_rect_black"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:visibility="invisible"
                        />
                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/colorBlack"
                />

            <com.provider.beautician.helpers.CustomViewPager
                android:id="@+id/frag_client_profile_viewPager"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_400sdp"
                />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</LinearLayout>