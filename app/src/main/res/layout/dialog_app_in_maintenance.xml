<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="250dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/dialog_no_internet_bg"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:src="@mipmap/maintenance" />

    <TextView
        android:id="@+id/dialog_txt_app_maintenance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:layout_marginTop="16dp"
        android:text="@string/app_in_maintenance"
        android:textColor="@color/colorPrimaryText"
        android:textSize="16sp" />

    <Button
        android:id="@+id/dialog_btn_close"
        style="?attr/borderlessButtonStyle"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/blue_rect_solid_round"
        android:text="@string/close"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="16sp" />

</LinearLayout>