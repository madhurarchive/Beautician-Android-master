<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeRow"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true">

    <RelativeLayout
        android:id="@+id/relativeDrawerItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/nav_drawer_row_padding">

        <ImageView
            android:id="@+id/Slider_icon"
            android:layout_width="@dimen/nav_drawer_icon"
            android:layout_height="@dimen/nav_drawer_icon"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/nav_drawer_icon_right_margin"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/Slider_icon"
            android:gravity="start"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryText"
            android:textDirection="locale"
            android:textSize="@dimen/nav_drawer_text" />

    </RelativeLayout>


</RelativeLayout>