<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/fab_margin">

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/CounterText"
            app:hintTextAppearance="@style/HintText"
            >
            <EditText
                android:id="@+id/smd_edt_first_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/regular_font"
                android:textColorHint="@color/colorSecondaryText"
                android:imeOptions="actionNext"
                android:hint="@string/first_name"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:paddingBottom="@dimen/edit_bottom_padding"
                android:textSize="@dimen/font_size_regular" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/CounterText"
            app:hintTextAppearance="@style/HintText"
            >
            <EditText
                android:id="@+id/smd_edt_last_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/regular_font"
                android:textColorHint="@color/colorSecondaryText"
                android:imeOptions="actionNext"
                android:hint="@string/last_name"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:paddingBottom="@dimen/edit_bottom_padding"
                android:textSize="@dimen/font_size_regular" />

        </com.google.android.material.textfield.TextInputLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center_vertical">

            <com.rilixtech.widget.countrycodepicker.CountryCodePicker
                android:id="@+id/frag_staff_member_details_countryCodePicker"
                app:ccp_textSize="@dimen/font_size_regular"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                app:ccp_defaultNameCode="US"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/smd_edt_mobile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:fontFamily="@font/helvetica_regular"
                android:textColorHint="@color/colorSecondaryText"
                android:imeOptions="actionNext"
                android:hint="@string/mobile"
                android:inputType="phone"
                android:maxLines="1"
                android:paddingTop="@dimen/space_4x"
                android:paddingBottom="@dimen/space_4x"
                android:textAlignment="viewStart"
                android:textSize="@dimen/font_size_regular" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorPrimaryText"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/CounterText"
            app:hintTextAppearance="@style/HintText"
            >
            <EditText
                android:id="@+id/smd_edt_email"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/regular_font"
                android:textColorHint="@color/colorSecondaryText"
                android:imeOptions="actionNext"
                android:hint="@string/email_address"
                android:inputType="textEmailAddress"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:paddingBottom="@dimen/edit_bottom_padding"
                android:textSize="@dimen/font_size_regular" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/CounterText"
            app:hintTextAppearance="@style/HintText"
            >
            <EditText
                android:id="@+id/smd_edt_staff_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/regular_font"
                android:textColorHint="@color/colorSecondaryText"
                android:imeOptions="actionNext"
                android:hint="@string/staff_title"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:paddingBottom="@dimen/edit_bottom_padding"
                android:textSize="@dimen/font_size_regular" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            app:counterOverflowTextAppearance="@style/CounterOverFlow"
            app:counterTextAppearance="@style/CounterText"
            app:hintTextAppearance="@style/HintText"
            >
            <EditText
                android:id="@+id/smd_edt_notes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/regular_font"
                android:textColorHint="@color/colorSecondaryText"
                android:imeOptions="actionDone"
                android:hint="@string/notes"
                android:inputType="text"
                android:maxLines="1"
                android:textAlignment="viewStart"
                android:paddingBottom="@dimen/edit_bottom_padding"
                android:textSize="@dimen/font_size_regular" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4x"
            android:fontFamily="@font/bold_font"
            android:text="@string/employment_start_date"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textSize="@dimen/font_size_regular" />

        <RelativeLayout
            android:id="@+id/smd_rl_emp_start_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2x"
            android:background="@drawable/ic_inventory_product_edit_bg"
            android:padding="@dimen/space_4x">

            <TextView
                android:id="@+id/smd_txt_emp_start_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_3x"
                android:layout_toStartOf="@+id/smd_ic_arrow_start_date"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/select_date"
                android:textAlignment="viewStart"
                android:textSize="@dimen/font_size_regular" />

            <ImageView
                android:id="@+id/smd_ic_arrow_start_date"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_down_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4x"
            android:fontFamily="@font/bold_font"
            android:text="@string/employment_end_date"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textSize="@dimen/font_size_regular" />

        <RelativeLayout
            android:id="@+id/smd_rl_emp_end_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2x"
            android:background="@drawable/ic_inventory_product_edit_bg"
            android:padding="@dimen/space_4x">

            <TextView
                android:id="@+id/smd_txt_emp_end_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_3x"
                android:layout_toStartOf="@+id/smd_ic_arrow_end_date"
                android:fontFamily="@font/regular_font"
                android:text="@string/select_date"
                android:textAlignment="viewStart"
                android:textSize="@dimen/font_size_regular" />

            <ImageView
                android:id="@+id/smd_ic_arrow_end_date"
                android:layout_width="@dimen/_16sdp"
                android:layout_height="@dimen/_16sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_down_arrow" />

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_4x"
            android:fontFamily="@font/bold_font"
            android:text="@string/appointment_color"
            android:textAlignment="viewStart"
            android:textAllCaps="true"
            android:textSize="@dimen/font_size_regular" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/smd_rv_appointment_color"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5x" />

        <Button
            style="?attr/borderlessButtonStyle"
            android:id="@+id/smd_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/ic_save_btn_bg"
            android:fontFamily="@font/medium_font"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_regular" />

        <Button
            style="?attr/borderlessButtonStyle"
            android:id="@+id/smd_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/ic_inventory_product_edit_bg"
            android:fontFamily="@font/medium_font"
            android:text="@string/cancel"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_regular" />

        <Button
            style="?attr/borderlessButtonStyle"
            android:id="@+id/smd_btn_delete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_16sdp"
            android:background="@drawable/ic_rad_btn_bg"
            android:fontFamily="@font/medium_font"
            android:text="@string/delete"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_regular" />

    </LinearLayout>


</androidx.core.widget.NestedScrollView>