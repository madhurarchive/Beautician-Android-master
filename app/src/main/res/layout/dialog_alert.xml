<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_220sdp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardCornerRadius="@dimen/_4sdp"
    app:cardElevation="@dimen/_2sdp"
    app:cardUseCompatPadding="true"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/_10sdp"
        android:background="@color/colorWhite"
        >


        <TextView
            android:id="@+id/dialog_alert_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_regular"
            android:textStyle="bold"
            android:fontFamily="@font/helvetica_regular"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/dialog_alert_txt_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_2x"
            android:layout_marginBottom="@dimen/space_3x"
            android:lineSpacingExtra="@dimen/space_2x"
            android:text="@string/app_name"
            android:textAlignment="viewStart"
            android:fontFamily="@font/helvetica_regular"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_small" />

        <TextView
            android:id="@+id/dialog_alert_btn_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/ic_rect_dialog_btn_bg"
            android:fontFamily="@font/helvetica_regular"
            android:paddingTop="@dimen/_10sdp"
            android:paddingStart="@dimen/_25ssp"
            android:paddingEnd="@dimen/_25ssp"
            android:paddingBottom="@dimen/_10sdp"
            android:text="@string/ok"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:includeFontPadding="false"
            android:layout_gravity="end"
            android:textSize="@dimen/font_size_regular" />
    </LinearLayout>

</androidx.cardview.widget.CardView>