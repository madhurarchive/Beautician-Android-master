<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <include layout="@layout/toolbar2"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/default_padding">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold_font"
                android:text="@string/setup_menu_1"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_x_large" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/setup_desc_1"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_small" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6x"
                android:fontFamily="@font/bold_font"
                android:text="@string/business_info"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/business_info_desc"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_small" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_6x"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/business_name"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_small" />

            <EditText
                android:id="@+id/as_edt_business_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_inventory_product_edit_bg"
                android:fontFamily="@font/helvetica_regular"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:hint="@string/business_name"
                android:paddingTop="@dimen/space_2x"
                android:paddingBottom="@dimen/space_2x"
                android:paddingStart="@dimen/space_2x"
                android:paddingEnd="@dimen/space_2x"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_regular" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorVeryLightGrey"
            android:fontFamily="@font/helvetica_regular"
            android:paddingStart="@dimen/default_padding"
            android:paddingTop="@dimen/space_2x"
            android:paddingEnd="@dimen/default_padding"
            android:paddingBottom="@dimen/space_2x"
            android:text="@string/business_type_desc_text"
            android:textAlignment="viewStart"
            android:textColor="@color/colorPrimaryText"
            android:textSize="@dimen/font_size_small" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/space_5x"
            android:background="@color/colorDivider" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5x"
            android:orientation="vertical"
            android:paddingStart="@dimen/default_padding"
            android:paddingTop="@dimen/space_3x"
            android:paddingEnd="@dimen/default_padding"
            android:paddingBottom="@dimen/space_3x">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bold_font"
                android:text="@string/online_links"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/helvetica_regular"
                android:text="@string/add_your_company_links"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_small" />

        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding">

            <EditText
                android:id="@+id/as_edt_website"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_3x"
                android:layout_toStartOf="@+id/ic_down_arrow_1"
                android:background="@android:color/transparent"
                android:fontFamily="@font/helvetica_regular"
                android:hint="@string/website"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingTop="@dimen/space_3x"
                android:paddingBottom="@dimen/space_3x"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_regular" />

            <ImageView
                android:id="@+id/ic_down_arrow_1"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_website" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/space_2x"
            android:background="@color/colorDivider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding">

            <EditText
                android:id="@+id/as_edt_fb_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_3x"
                android:layout_toStartOf="@+id/ic_down_arrow_2"
                android:background="@android:color/transparent"
                android:fontFamily="@font/helvetica_regular"
                android:hint="@string/facebook_page"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:maxLines="1"
                android:paddingTop="@dimen/space_3x"
                android:paddingBottom="@dimen/space_3x"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_regular" />

            <ImageView
                android:id="@+id/ic_down_arrow_2"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_facebook" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/space_2x"
            android:background="@color/colorDivider" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingStart="@dimen/default_padding"
            android:paddingEnd="@dimen/default_padding">

            <EditText
                android:id="@+id/as_edt_insta_page"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/space_3x"
                android:layout_toStartOf="@+id/ic_down_arrow_3"
                android:background="@android:color/transparent"
                android:fontFamily="@font/regular_font"
                android:hint="@string/instagram_page"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:maxLines="1"
                android:paddingTop="@dimen/space_3x"
                android:paddingBottom="@dimen/space_3x"
                android:textAlignment="viewStart"
                android:textColor="@color/colorPrimaryText"
                android:textSize="@dimen/font_size_regular" />

            <ImageView
                android:id="@+id/ic_down_arrow_3"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/img_instagram" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="@dimen/space_2x"
            android:background="@color/colorDivider" />

        <Button
            style="?attr/borderlessButtonStyle"
            android:id="@+id/as_btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_7x"
            android:layout_marginTop="@dimen/space_6x"
            android:layout_marginEnd="@dimen/space_7x"
            android:background="@drawable/ic_save_btn_bg"
            android:fontFamily="@font/medium_font"
            android:text="@string/save"
            android:textAlignment="center"
            android:textColor="@color/colorWhite"
            android:textSize="@dimen/font_size_regular" />

        <View
            android:layout_width="match_parent"
            android:layout_height="60dp" />

    </LinearLayout>


</ScrollView>